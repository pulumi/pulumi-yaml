{
  "configuration": {
    "InstanceType": {
      "type": "String",
      "default": "t3.micro"
    }
  },
  "resources": {
    "WebSecGrp": {
      "type": "aws:ec2:SecurityGroup",
      "properties": {
        "ingress": [
          {
            "protocol": "tcp",
            "fromPort": 80,
            "toPort": 80,
            "cidrBlocks": ["0.0.0.0/0"]
          }
        ]
      },
      "options": {
        "version": "4.37.1"
      }
    },
    "WebServer": {
      "type": "aws:ec2:Instance",
      "properties": {
        "instanceType": "${InstanceType}",
        "ami": {
          "fn::invoke": {
            "function": "aws:getAmi",
            "arguments": {
              "filters": [
                { "name": "name", "values": ["amzn2-ami-hvm-2.0.20231218.0-x86_64-ebs"] }
              ],
              "owners": ["137112412989"],
              "mostRecent": true
            },
            "return": "id"
          }
        },
        "userData": {
          "fn::join": [
            "\n",
            [
              "#!/bin/bash",
              "echo 'Hello, World from ${WebSecGrp.arn}!' > index.html",
              "nohup python -m SimpleHTTPServer 80 &"
            ]
          ]
        },
        "vpcSecurityGroupIds": ["${WebSecGrp.id}"]
      }
    }
  },
  "outputs": {
    "InstanceId": "${WebServer.id}",
    "PublicIp": "${WebServer.publicIp}",
    "PublicHostName": "${WebServer.publicDns}"
  }
}
